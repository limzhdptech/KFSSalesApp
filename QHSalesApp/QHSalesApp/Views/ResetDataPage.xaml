<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QHSalesApp.ResetDataPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
            <Button x:Name="ResetMasterButton"  Text="Reset Master" TextColor="White" FontSize="16" FontAttributes="Bold" HeightRequest="60" 
                        BackgroundColor="#EC2029" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="30,30,30,15" Clicked="ResetMasterButton_Clicked" />
            <Button x:Name="ResetTransButton"  Text="Reset Transaction" TextColor="White" FontSize="16" FontAttributes="Bold" HeightRequest="60" 
                        BackgroundColor="#EC2029" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="30,15,30,30" Clicked="ResetTransButton_Clicked" />
          <Button x:Name="ResetInvButton"  Text="Reset Inventory" TextColor="White" FontSize="16" FontAttributes="Bold" HeightRequest="60"
                        BackgroundColor="#EC2029" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="30,15,30,30" Clicked="ResetInvButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>